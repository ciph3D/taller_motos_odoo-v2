<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Etapas para proyectos de reparación -->
        <record id="repair_stage_diagnosis" model="project.task.type">
            <field name="name">Diagnóstico</field>
            <field name="sequence">10</field>
        </record>
        
        <record id="repair_stage_repair" model="project.task.type">
            <field name="name">Reparación</field>
            <field name="sequence">20</field>
        </record>
        
        <record id="repair_stage_testing" model="project.task.type">
            <field name="name">Pruebas</field>
            <field name="sequence">30</field>
        </record>
        
        <record id="repair_stage_completed" model="project.task.type">
            <field name="name">Completado</field>
            <field name="sequence">40</field>
            <field name="fold">True</field>
        </record>
    </data>
</odoo>